<?xml version="1.0" encoding="UTF-8"?>

    <android.support.constraint.ConstraintLayout android:background="#F4F7F7" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    -

        <android.support.constraint.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="291dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">


            -

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageButton
                    android:id="@+id/b3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape1"
                    android:clickable="true"
                    android:onClick="goToJustice"
                    android:scaleType="fitXY"
                    android:src="@drawable/rule_icon" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="점자란?"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>


            -

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageButton
                    android:id="@+id/b4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape3"
                    android:clickable="true"
                    android:onClick="goToConstruction"
                    android:scaleType="fitXY"
                    android:src="@drawable/u" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="점자 구성"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>


            -

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <ImageButton
                    android:id="@+id/b5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape5"
                    android:clickable="true"
                    android:onClick="goToInventor"
                    android:scaleType="fitXY"
                    android:src="@drawable/inventor_icon" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="점자 역사"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>


            -

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape6"
                    android:clickable="true"
                    android:onClick="goToTrait"
                    android:scaleType="fitXY"
                    android:src="@drawable/checklist"
                    android:id="@+id/b6"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_height="25dp"
                    android:layout_width="90dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:text="한국점자 특성"
                    android:gravity="center" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
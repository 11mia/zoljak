<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F7"
    android:orientation="vertical"
    tools:context="com.example.miseon.braille.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_list"
                android:clickable="true"
                android:onClick="aboutBraille"
                android:text="점자이야기"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />

            <Button
                android:id="@+id/button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_list"
                android:clickable="true"
                android:onClick="studyBraille"
                android:text="점자표"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_marginLeft="40dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_list"
                android:clickable="true"
                android:onClick="practiceBraille"
                android:text="점자연습"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:background="@drawable/shape_list"
                android:clickable="true"
                android:onClick="GoToTest"
                android:text="테스트"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_marginLeft="40dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_width="120dp"

                android:layout_height="wrap_content"
                android:background="@drawable/shape_list"
                android:clickable="true"
                android:onClick="GoToTranslate"
                android:text="변환"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                />


            <Button
                android:id="@+id/button4"
                android:layout_width="120dp"

                android:layout_height="wrap_content"
                android:background="@drawable/shape_list"
                android:clickable="true"
                android:onClick="GoToSupplement"
                android:text="부록"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:layout_marginLeft="40dp"
                />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>

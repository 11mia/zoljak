<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F7"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="291dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155">

            <ImageButton
                android:id="@+id/b3"
                android:tag="1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/shape1"
                android:clickable="true"
                android:onClick="goToLife"
                android:scaleType="centerInside"
                android:src="@drawable/elevator_icon" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="엘리베이터"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155">

            <ImageButton
                android:id="@+id/b4"
                android:tag="2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/shape3"
                android:clickable="true"
                android:onClick="goToLife"

                android:scaleType="centerInside"
                android:src="@drawable/street_icon" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="보행"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ImageButton
                android:id="@+id/b5"
                android:tag="3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/shape5"
                android:clickable="true"
                android:onClick="goToLife"
                android:src="@drawable/subway_icon"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="대중교통"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ImageButton
                android:id="@+id/b6"
                android:tag="4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shape6"
                android:clickable="true"
                android:onClick="goToLife"
                android:scaleType="centerInside"
                android:src="@drawable/life_icon" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="기타"
                android:textColor="#000000"
                android:textSize="15dp" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>